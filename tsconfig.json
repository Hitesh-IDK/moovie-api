{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "lib": ["dom", "ES2023"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts", "**/*.tsx"],
  "files": ["server.ts"]
}
